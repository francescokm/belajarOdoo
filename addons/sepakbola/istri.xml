<odoo>
<data>
<!-- tree view utk module course -->
<record id = "view_sepakbola_istri_tree" model="ir.ui.view">
    <field name="name">sepakbola.istri.tree</field>
    <field name="model">sepakbola.istri</field>
    <field name="type">tree</field>
    <field name="arch" type="xml">
        <tree string="Istri">
            <field name="nama"/>
			<field name="keturunan"/>
            <field name="kota"/>
			<field name="pemain_id"/>
			
        </tree>        
    </field>    
</record>





<!-- set form utk module istri -->
<record id = "view_sepakbola_istri_form" model="ir.ui.view">
    <field name="name">sepakbola.istri.form</field>
    <field name="model">sepakbola.istri</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form string="istri">
            <sheet>
                <div class = "oe_title">
                    <label for="name" class="oe_edit_only" string="Nama Istri" />
                    <h1>
                        <field name="nama" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="pemain_id" />
                        <field name="keturunan" />
                        <field name="kota" />
                        
                    </group>
                </group>
                
            </sheet>
        </form>
    </field>    
</record>

</data>
</odoo>